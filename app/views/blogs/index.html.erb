<% provide(:title, '博客') %>
<div id="main">
  <ul class="blog_index">
    <% @blogs.each do |blog| %>
      <li class="blogs_li"><%= raw weight_status_index(blog) %><%= link_to blog.title, blog %><span class="blog_time"><%= blog.created_at.strftime("%Y-%m-%d") %><span class="blog_view">访问量：<%= blog.view_total %></span><span class="ml10">评论数：<%= blog.comments_count %></span></span></li>
    <% end %>
    <%= paginate @blogs %>
  </ul>
</div>
