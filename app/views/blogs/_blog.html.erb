<div class="caption">
  <h3 class="underline mb5 pb5">
    <%= raw weight_status(blog) %><%= link_to blog.title, blog_path(title: blog.title) %>
  </h3>
  <div class="blog_info">
    分类：<%= link_to blog.category_name, blogs_path(category: blog.blog_category_id) %> |
    标签：<% blog.tags.each do |tag| %>
      <%= link_to blog.tag, root_path(tags: blog.blog_category_id) %><br />
    <% end %>
    | 发布：<%= format_time(blog.created_at) %> | 热度：<span class="label label-default"><%= blog.view_total %>℃</span>
  </div>
</div>
<p><%= display_content(blog.content) %></p>
