<%= form_tag(user_login_path, method: :post) do %>
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
  <p>
    <%= label_tag "username" %>
    <%= text_field_tag :username %>
    </p>
    <p>
      <%= label_tag "password" %>
      <%= password_field_tag :password %>
      </p>
      <p>
        <%= submit_tag "login" %>
      </p>
<% end %>
