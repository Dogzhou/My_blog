<% provide :title, "接口文档" %>
<% content_for :h1 do %>接口文档<% end %>
<% content_for :info do %>API路由列表，包括参数说明<% end %>
<div class="table-responsive">
  <table class="table mt20">
    <tr>
      <th width=15% class="fb">接口</th>
      <th width=10% class="fb">方法</th>
      <th width=33% class="fb">地址</th>
      <th width=42% class="fb">参数</th>
    </tr>
    <tr>
      <td>首页</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/home.json</td>
      <td>page:当前页数 per_page:每页个数</td>
    </tr>
    <tr>
      <td>导航</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/nav.json</td>
      <td>无</td>
    </tr>
    <tr>
      <td>博客列表</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/blogs.json</td>
      <td>keyword:关键词查询 category:分类查询 order:排序,值为hottest(最热)/newest(最新) page:当前页数 per_page:每页个数</td>
    </tr>
    <tr>
      <td>博客详情</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/blogs/:url_name.json</td>
      <td>avatar_size: 博客评论用户的头像尺寸</td>
    </tr>
    <tr>
      <td>博客分类列表</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/categories.json</td>
      <td>无</td>
    </tr>
    <tr>
      <td>友情链接</td>
      <td>GET</td>
      <td>http://starzhou.com/cn/links.json</td>
      <td>无</td>
    </tr>
    <tr>
      <td>邮箱订阅</td>
      <td>POST</td>
      <td>http://starzhou.com/cn/subscribes</td>
      <td>email:订阅的邮箱</td>
    </tr>
  </table>
</div>
