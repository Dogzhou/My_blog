<% provide(:title, '博客列表') %>
<div id="main">
  <%= link_to '新建日志', new_admin_blog_path, class: "btn btn-primary btn-large" %>
  <ul class="blog_index">
    <% @blogs.each do |blog| %>
      <li class="blogs_li"><%= raw weight_status_index(blog) %><%= link_to blog.title, blog_path(url_name: blog.url_name) %><span class="blog_time"><%= blog.created_at.strftime("%Y-%m-%d") %><span class="blog_view">访问量：<%= blog.view_total %></span><span class="ml10">评论数：<%= blog.comments.count %></span><span class="ml10"><%= link_to '编辑', edit_admin_blog_path(blog) %></span><span class="ml10"><%= link_to '取消发布', admin_blog_path(blog), method: :delete, data: { confirm: '确定取消发布？' } %></span></span></li>
    <% end %>
    <%= paginate @blogs %>
  </ul>
</div>
