<%= content_for :javascripts do %>
  <script type="text/javascript" src="/kindeditor/kindeditor-all-min.js"></script>
  <script type="text/javascript" src="/kindeditor/lang/zh_CN.js"></script>
<% end %>
  <%= f.error_messages %>
  <%= f.text_field :title, placeholder: "我的日志", class: "form-control" %>
  <%= f.kindeditor :content, height: 500 %>
  <div class="panel-footer">
    <span class="form-inline" role="form">
      <span class="pull-left ">
        分类：<%= f.select :blog_category_id, options_from_collection_for_select(@category, :id, :name, @blog.blog_category_id), {}, { class: "form-control" } %>
        <input type="button" class="btn" value="增加分类" name="" data-toggle="modal" data-target=".bs-modal-sm" />
        <span class="form-inline">
          <span class="form-group">
            <label class="control-label">权重：</label>
            <%= f.text_field :weight, class: "form-control", placeholder: "权重" %>
          </span>
          <span class="form-group">
            <label class="control-label">url_name：</label>
            <%= f.text_field :url_name, class: "form-control", placeholder: "url name" %>
          </span>
          <span class="form-group">
            <label class="control-label">seo_keyword</label>
            <%= f.text_field :seo_keyword, class: "form-control", placeholder: "seo keyword" %>
          </span>
        </span>
      </span>
      <%= f.submit "发表", class: "btn btn-default pull-right btn-lg" %>
    </span>
    <div class="cb"></div>
  </div>
<div class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal", aria-hidden="true">x</button>
        <h4 class="modal-title" id="mySmallModalLabel">增加分类</h4>
      </div>
      <div class="modal-body">
        <div class="form-inline" role="form">
          <div class="form-group">
            <label class="sr-only" for="exampleInputEmail2">新增分类</label>
            <%= text_field_tag :Cname,"", class: "form-control", placeholder: "新增分类" %>
          </div>
          <%= button_tag "确定", class: "btn btn-primary", onclick: "addLink()" %>
        </div>
      </div><!-- modal-body -->
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div>

