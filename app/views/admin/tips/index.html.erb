<% provide(:title, '小贴士列表') %>
<div id="main">
  <%= link_to '新建小贴士', new_admin_tip_path, class: "btn btn-primary btn-large" %>
  <p class="fr">共有<span class="red ml5 mr5 f20 fb"><%= @tips.total_count %></span>篇小贴士</p>
  <table class="table admin_bc_index">
    <tr>
      <th>内容</th>
      <th>操作</th>
    </tr>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.content %></td>
        <td><%= link_to '编辑', edit_admin_tip_path(tip) %></span><span class="ml10"><%= link_to '删除', admin_tip_path(tip), method: :delete, data: { confirm: '确定删除？' } %></td>
      </tr>
    <% end %>
  </table>
    <%= paginate @tips %>
</div>
