<% title '登录' %>
<div class="row">
  <div class="span6">
    <%= form_tag sessions_path,class: "form-horizontal" %>
      <legend>登录</legend>
      <div class="control-group">
        <%= label_tag 'username', "用户名/电子邮箱", class: "control-label" %>
        <div class="controls">
          <%= text_field_tag :username %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag 'password', "密码", class: "control-label" %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>
      <div class="form-actions">
        <%= button_tag "登录", class: "btn btn-primary pull-right" %>
      </div>
    </form>
  </div><!-- span6 -->
</div><!-- row -->
