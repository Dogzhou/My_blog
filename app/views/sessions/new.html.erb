<% provide(:title, '登录') %>
<%= form_tag sessions_path, class: "form-horizontal" do %>
  <fieldset>
    <legend>登录</legend>
    <div class="form-group">
      <%= label_tag 'email', "电子邮箱", class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= email_field_tag :email, "", class: "form-control", placeholder: "电子邮箱", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'password', "密码", class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= password_field_tag :password, "", class: "form-control", placeholder: "密码", required: true %>
      </div>
    </div>
    <div class="form-group">
      <span class="control-label col-sm-5">
        <%= label_tag 'remeber', "记住密码", id: "login_remeber_label" %>
        <%= check_box_tag :remeber %>
      </span>
      <div class="col-sm-5">
        <%= button_tag "登录", class: "btn btn-success" %>
      </div>
    </div>
  </fieldset>
<% end %>
