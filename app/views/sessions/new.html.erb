<% provide(:title '登录') %>
<%= form_tag sessions_path, class: "form-horizontal" %>
<fieldset>
<legend>登录</legend>
<div class="form-group">
  <%= label_tag 'email', "电子邮箱", class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= text_field_tag :email, "", class: "form-control", placeholder: "电子邮箱" %>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'password', "密码", class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= password_field_tag :password, "", class: "form-control", placeholder: "密码" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-5 col-sm-5">
    <%= button_tag "登录", class: "btn btn-primary" %>
  </div>
</div>
</fieldset>
