<% provide(:title, '主页') %>
<div id="main">
  <% @blogs.each do |blog| %>
  <div class="caption">
    <h3 class="underline">
      <%= link_to blog.title, blog %>
    </h3>
    <div class="info">
      分类：技术 | 标签：rails | 发布：<%= format_time(blog.created_at) %>
    </div>
  </div>
  <br />
  <p><%= raw blog.content %></p>
  <% end %>
</div>
